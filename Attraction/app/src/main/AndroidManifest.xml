<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rubze.attraction">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="GuideCanaria"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AttractionActivity" />
        <activity android:name=".QuizActivity"
            android:theme="@style/AppTheme.FragmentTheme" />
        <activity android:name=".QuizResultsActivity"
            android:theme="@style/AppTheme.FragmentTheme" />
        <activity android:name=".CalendarActivity"
            android:theme="@style/AppTheme.FragmentTheme" />
        <activity android:name=".UserFormActivity"
            android:theme="@style/AppTheme.FragmentTheme" />
    </application>

</manifest>