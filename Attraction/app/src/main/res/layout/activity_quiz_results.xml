<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_quizresults"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_border_frame"
    android:padding="@dimen/basic_dimen__">

    <TextView
        android:id="@+id/lbl_quizresults_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fr_dimen"
        android:text="@string/results"
        android:textSize="@dimen/medium_dimen"
        android:paddingTop="@dimen/basic_dimen"
        android:textColor="@color/colorGreen" />

    <ImageButton
        android:id="@+id/btn_quizresults_maximize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_unfold_more"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_quizresults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_quizresults_name"
        android:paddingTop="@dimen/basic_dimen"/>

</RelativeLayout>